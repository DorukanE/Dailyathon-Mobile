<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="hintTextColor">@color/colorText</item>
    </style>

    <style name="SearchTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:editTextColor">@color/colorWhite</item>
    </style>

</resources>